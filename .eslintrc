{
  "parser": "babel-eslint",
  "extends": ["plugin:jsx-a11y/recommended", "plugin:react/recommended", "prettier"],
  "plugins": ["babel", "jsx-a11y", "react"],
  "parserOptions": {
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      }
    },
    "import/ignore": ["node_modules"]
  },
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-var": "error",
    "no-unused-vars": "error",
    "comma-dangle": ["error", "never"],
    "eqeqeq": ["error", "always"],
    "no-multiple-empty-lines": [2, {"max": 1}],
    "no-multi-spaces": [2],
    "id-blacklist": ["warn", "poop", "fuck", "shit"]
  }
}